<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkoutStatistics" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#84E0C4</item>
        <item name="colorPrimaryVariant">#7FDF92</item>
        <item name="colorOnPrimary">#F3FAF8</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#7FDF92</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#84E0C4</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WorkoutStatistics.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WorkoutStatistics.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WorkoutStatistics.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>